<p style="color: green"><%= notice %></p>

<h1><%= t('views.common.title_index', name: i18n_pluralize(User.model_name.human)) %></h1>

<div id="users" class="index-items">
  <% @users.each do |user| %>
    <div class="index-item">
      <%= render user %>
      <p>
        <%= link_to t('views.common.show', name: User.model_name.human.downcase), user %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @users %>

<nav class="page-nav">
    <%= link_to t('views.common.edit', name: User.model_name.human.downcase), edit_user_registration_path %>
    <%= link_to t('views.common.back', name: i18n_pluralize(Book.model_name.human.downcase)), books_path %>
    <%= button_to t('devise.shared.links.sign_out'), destroy_user_session_path, method: :delete %>
</nav>
