<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<div class="show-item">
  <%= render @report %>

  <br>

  <% if @report.mentioned_reports.empty? %>
    <%= t('views.mention_relation.no_mention_relations', name: Report.model_name.human) %>
  <% else %>
    <%= t('views.mention_relation.mention_relations', name: Report.model_name.human) %><br>
    <% @report.mentioned_reports.order(:id).each do |mentioned_report| %>
      <%= mentioned_report.user.name %> : <%= link_to mentioned_report.title, report_path(mentioned_report) %>
      <%= t('views.mention_relation.mention_from') %>
      <%= t('views.mention_relation.from_times_ago', time: time_ago_in_words(mentioned_report.created_at)) %><br>
    <% end %>
  <% end %>
</div>

<%= render 'shared/comments', commentable: @report %>

<nav class="page-nav">
  <% if @report.editable?(current_user) %>
    <%= link_to t('views.common.edit', name: Report.model_name.human.downcase), edit_report_path(@report) %> |
  <% end %>
  <%= link_to t('views.common.back', name: i18n_pluralize(Report.model_name.human.downcase)), reports_path %>

  <% if @report.editable?(current_user) %>
    <%= button_to t('views.common.destroy', name: Report.model_name.human.downcase), @report, method: :delete %>
  <% end %>
</nav>
