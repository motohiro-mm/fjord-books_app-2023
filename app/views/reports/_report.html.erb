<div id="<%= dom_id report %>">
  <p>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <% if report.user.name.eql?("") %>
      <%=  report.user.email %>
    <% else %>
      <%= report.user.name %>
    <% end %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
    <%= l report.created_at, format: :default %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:title) %>:</strong>
    <%= report.title %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:body) %>:</strong>
    <%= report.body %>
  </p>

</div>
