<p style="color: green"><%= notice %></p>

<h1><%= t('headline.index', model_name: Book.model_name.human) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
  <div class="index-item">
    <%= render book %>
    <p>
      <%= link_to t(:show_this_model, model_name: Book.model_name.human.downcase), book %>
    </p>
  </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t(:new_model, model_name: Book.model_name.human), new_book_path %>
</nav>
