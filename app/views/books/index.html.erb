<p style="color: green"><%= notice %></p>

<h1><%= t('views.common.title_index', name: i18n_pluralize(Book.model_name.human)) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('views.common.show', name: Book.model_name.human.downcase), book_path(book, current_page: @books.current_page) %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= paginate @books, theme: 'bootstrap-5' %>
  <%= link_to t('views.common.new', name: Book.model_name.human.downcase), new_book_path %>
</nav>
